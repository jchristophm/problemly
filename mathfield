<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Math Input</title>
  <script type="module">
    import 'https://unpkg.com/@cortex-js/mathlive?module';
    window.addEventListener('DOMContentLoaded', () => {
      const mf = document.getElementById('mathEditor');
      if (mf) {
        mf.value = "";
        mf.focus(); // Focus automatically to pop up the keyboard
      }
    });
  </script>
  <style>
    body {
      margin: 0;
      padding: 20px;
      font-family: Arial, sans-serif;
      background: #f9fafa;
    }
    #mathEditor {
      min-height: 120px;
      width: 100%;
      font-size: 20px;
      border: 1px solid #ccc;
      border-radius: 6px;
      padding: 10px;
      box-sizing: border-box;
    }
    #insertButton {
      margin-top: 15px;
      padding: 10px 20px;
      font-size: 16px;
      background-color: #0088cc;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    #insertButton:hover {
      background-color: #006699;
    }
  </style>
</head>
<body>

  <math-field id="mathEditor" virtual-keyboard-mode="onfocus"></math-field>

  <button id="insertButton" onclick="insertLatex()">Insert Equation</button>

  <script>
    function insertLatex() {
      const latex = document.getElementById('mathEditor').value;
      parent.postMessage(latex, '*');
    }
  </script>

</body>
</html>
